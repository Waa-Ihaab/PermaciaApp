<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Couleur de fond -->
    <solid android:color="#FFFFFF"/>

    <!-- Bordure -->
    <stroke
        android:width="1.5dp"
        android:color="#CCCCCC"/>

    <!-- Coins arrondis -->
    <corners android:radius="20dp"/>

    <!-- Padding interne -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp"/>
</shape>
